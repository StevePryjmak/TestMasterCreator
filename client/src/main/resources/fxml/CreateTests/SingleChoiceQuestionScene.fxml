<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="com.LerningBara.controller.CreateTests.SingleChoiceQuestionController">
   <children>
      <VBox alignment="CENTER_LEFT" layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="500.0" spacing="10.0">
         <children>
            <!-- Question Input -->
            <HBox spacing="10.0">
               <Label text="Question:" />
               <TextField fx:id="questionInput" promptText="Enter your question here" prefWidth="400.0" />
            </HBox>

            <!-- Answer Inputs -->
            <VBox spacing="5.0">
               <HBox spacing="10.0">
                  <Label text="Answer 1:" />
                  <TextField fx:id="answerInput1" promptText="Enter answer option 1" prefWidth="300.0" />
               </HBox>
               <HBox spacing="10.0">
                  <Label text="Answer 2:" />
                  <TextField fx:id="answerInput2" promptText="Enter answer option 2" prefWidth="300.0" />
               </HBox>
               <HBox spacing="10.0">
                  <Label text="Answer 3:" />
                  <TextField fx:id="answerInput3" promptText="Enter answer option 3" prefWidth="300.0" />
               </HBox>
               <HBox spacing="10.0">
                  <Label text="Answer 4:" />
                  <TextField fx:id="answerInput4" promptText="Enter answer option 4" prefWidth="300.0" />
               </HBox>
            </VBox>

            <!-- Save Button -->
            <Button fx:id="saveButton" text="Save Question" onMouseClicked="#handleSaveQuestion" prefWidth="150.0" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </children>
</AnchorPane>
